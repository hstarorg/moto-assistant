/* pages/moto-add/moto-add.wxss */

.form-moto {
  width: 690rpx;
}

.moto-photo {
  width: 256rpx;
  height: 256rpx;
  border: 1px solid #ccc;
  margin: 0 auto;
  margin-bottom: 50rpx;
}

.section {
  display: flex;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  line-height: 84rpx;
}

input[name=input], .date-picker {
  font-size: 28rpx;
  flex: 1;
  height: 84rpx;
}

.btn-area {
  margin-top: 15rpx;
}

.btn-area button {
  font-size: 32rpx;
}

.form-item {
  border-bottom: 1px solid #eee;
}
